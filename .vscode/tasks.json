{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "remote_debug_build",
			"type": "shell",
			"command": "mvn package"
		},
		{
			"label": "remote_debug_upload",
			"type": "shell",
			"command": "scp -i ${config:identity_file} ${workspaceFolder}/target/${config:remote_debug_jar} pi@${config:remote_debug_address}:${config:pi_deployment_folder}",
		},
		{
			"label": "remote_debug_start_server",
			"isBackground": true,
			"type": "shell",
			"command": "ssh pi@${config:remote_debug_address} -i ${config:identity_file} \"cd ${config:pi_deployment_folder}; java -agentlib:jdwp=transport=dt_socket,server=y,suspend=y,address=${config:remote_debug_address}:8000 -cp ${config:remote_debug_jar} ${config:remote_debug_main}\"",
			"problemMatcher": [
				{
					"pattern": [
						{
							"regexp": ".",
							"file": 1,
							"location": 2,
							"message": 3
						}
					],
					"background": {
						"activeOnStart": true,
						"beginsPattern": ".",
						"endsPattern": ".",
					}
				}
			],
			"presentation": {
				"echo": true,
				"reveal": "always",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": true
			},
			"dependsOn": [
				"upload",
			],
		},
		{
			"label": "remote_debug_stop_server",
			"type": "shell",
			"command": "ssh pi@${config:remote_debug_address} -i ${config:identity_file} killall -9 java",
			"presentation": {
				"echo": true,
				"reveal": "never",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "deploy_controller_1",
			"type": "shell",
			"command": "scp -r -i ${config:identity_file} ${workspaceFolder}/${config:controller_1_store}/* pi@${config:controller_1_address}:${config:pi_deployment_folder}/${config:store_deployment_folder}",
		},
		{
			"label": "deploy_controller_2",
			"type": "shell",
			"command": "scp -r -i ${config:identity_file} ${workspaceFolder}/${config:controller_2_store}/* pi@${config:controller_2_address}:${config:pi_deployment_folder}/${config:store_deployment_folder}/",
		},
		{
			"label": "deploy_key_vault",
			"type": "shell",
			"command": "scp -r -i ${config:identity_file} ${workspaceFolder}/${config:key_vault_store}/* pi@${config:key_vault_address}:${config:pi_deployment_folder}/${config:store_deployment_folder}/",
		},
		{
			"label": "remote_debug_start",
			"dependsOn": [
				"remote_debug_build",
				"remote_debug_upload",
				"remote_debug_start_server"
			],
			"dependsOrder": "sequence"
		},
	],
}